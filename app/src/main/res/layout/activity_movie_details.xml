<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:theme="@style/AppTheme"
        tools:context=".MovieDetailsActivity">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/orig"
            android:src="@drawable/orig"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="ivPoster" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="13+"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/tvMovieName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvMovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Avengers:\nEnd Game"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/barrier2"
            />

        <TextView
            android:id="@+id/tvMovieCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Action, Adventure, Fantasy"
            android:textColor="#FF3466"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMovieName" />

        <ImageView
            android:id="@+id/ivMoviePop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_star_filled"
            android:scaleType="matrix"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMovieCategory" />

        <TextView
            android:id="@+id/tvMovieCountReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="125 reviews"
            android:textAllCaps="true"
            android:textColor="#6D6D80"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivMoviePop"
            app:layout_constraintTop_toTopOf="@id/ivMoviePop" />

        <TextView
            android:id="@+id/tvMovieStoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Storyline"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivMoviePop" />

        <TextView
            android:id="@+id/tvMovieStoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe."
            android:textColor="#BFFFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMovieStoryTitle" />

        <TextView
            android:id="@+id/tvMovieCastTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Cast"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMovieStoryDescription" />

        <ImageView
            android:id="@+id/ivActor1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="actor1"
            android:src="@drawable/actor1"
            app:layout_constraintEnd_toStartOf="@+id/ivActor2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMovieCastTitle" />

        <ImageView
            android:id="@+id/ivActor2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="actor2"
            android:src="@drawable/actor2"
            app:layout_constraintEnd_toStartOf="@+id/ivActor3"
            app:layout_constraintStart_toEndOf="@+id/ivActor1"
            app:layout_constraintTop_toBottomOf="@id/tvMovieCastTitle" />

        <ImageView
            android:id="@+id/ivActor3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="actor3"
            android:src="@drawable/actor3"
            app:layout_constraintEnd_toStartOf="@+id/ivActor4"
            app:layout_constraintStart_toEndOf="@+id/ivActor2"
            app:layout_constraintTop_toBottomOf="@+id/tvMovieCastTitle" />

        <ImageView
            android:id="@+id/ivActor4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="actor4"
            android:src="@drawable/actor4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivActor3"
            app:layout_constraintTop_toBottomOf="@id/tvMovieCastTitle" />

        <TextView
            android:id="@+id/tvActor1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Robert Downey Jr."
            android:textColor="#D8D8D8"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/ivActor1"
            app:layout_constraintRight_toRightOf="@id/ivActor1"
            app:layout_constraintTop_toBottomOf="@id/ivActor1" />

        <TextView
            android:id="@+id/tvActor2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cris Evans"
            android:textColor="#D8D8D8"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/ivActor2"
            app:layout_constraintRight_toRightOf="@id/ivActor2"
            app:layout_constraintTop_toBottomOf="@id/ivActor2" />

        <TextView
            android:id="@+id/tvActor3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mark Ruffalo"
            android:textColor="#D8D8D8"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/ivActor3"
            app:layout_constraintRight_toRightOf="@id/ivActor3"
            app:layout_constraintTop_toBottomOf="@id/ivActor3" />

        <TextView
            android:id="@+id/tvActor4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chris Hemsworth"
            android:textColor="#D8D8D8"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/ivActor4"
            app:layout_constraintRight_toRightOf="@id/ivActor4"
            app:layout_constraintTop_toBottomOf="@id/ivActor4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>