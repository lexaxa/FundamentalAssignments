<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_border"
    android:paddingBottom="8dp"
    android:theme="@style/Theme.Movie.NoActionBar"
    >

    <ImageView
        android:id="@+id/ivActor"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:contentDescription="actor1"
        android:src="@drawable/actor1"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/tvActor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Robert Downey Jr."
        android:textAppearance="@style/actor_name"
        android:textColor="#D8D8D8"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/ivActor"
        app:layout_constraintRight_toRightOf="@id/ivActor"
        app:layout_constraintTop_toBottomOf="@id/ivActor" />

</androidx.constraintlayout.widget.ConstraintLayout>
